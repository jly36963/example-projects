{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2020",
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmit": false,
    "outDir": "build",
    "rootDir": ".",
    "typeRoots": ["./types/declarations/"],
    "skipLibCheck": true // tsc breaks on packages in node_modules (@types/koa-pino-logger)
  },
  "exclude": ["node_modules"]
}
